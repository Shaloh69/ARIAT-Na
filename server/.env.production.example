# ARIAT-NA Production Environment Variables
# Copy this file to .env and fill in your actual values

# ===== Server Configuration =====
NODE_ENV=production
PORT=5000
API_PREFIX=/api/v1

# ===== Aiven MySQL Configuration =====
# Get these from Aiven Console → Overview tab
DB_HOST=airat-na-mysql-yourproject.aivencloud.com
DB_PORT=25060
DB_USER=avnadmin
DB_PASSWORD=your_aiven_mysql_password_here
DB_NAME=defaultdb

# SSL Configuration for Aiven
DB_SSL_CA=/home/user/ARIAT-Na/server/certs/ca.pem
DB_SSL_REJECT_UNAUTHORIZED=true

# ===== JWT Configuration =====
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===== Admin Configuration =====
ADMIN_EMAIL=admin@airat-na.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ===== Supabase Configuration (Optional - for Option B) =====
# Get these from Supabase Console → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJh...your-anon-key-here
SUPABASE_SERVICE_KEY=eyJh...your-service-role-key-here-KEEP-SECRET

# Storage Configuration
SUPABASE_STORAGE_BUCKET=destination-images

# ===== Email Configuration (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# ===== CORS Configuration =====
# Add your production frontend URL
CORS_ORIGIN=https://admin.airat-na.com,https://app.airat-na.com

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== File Upload =====
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== Security =====
# Generate: openssl rand -hex 32
SESSION_SECRET=your_session_secret_here

# ===== Monitoring (Optional) =====
# SENTRY_DSN=https://your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-new-relic-key-here
