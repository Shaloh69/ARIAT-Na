# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ariat_na

# SSL Configuration (for Aiven MySQL - leave empty for local development)
# Local development: Leave DB_SSL_CA empty
# Aiven production: Use relative path from server directory
# Example: ./ca/ca.pem or absolute path /path/to/server/ca/ca.pem
DB_SSL_CA=
DB_SSL_REJECT_UNAUTHORIZED=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Admin Configuration
ADMIN_EMAIL=admin@ariat-na.com
ADMIN_PASSWORD=ChangeThisPassword123!

# Supabase Storage Configuration (for images and videos)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here_KEEP_SECRET
SUPABASE_BUCKET=destination-media

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
